@model IEnumerable<FSDP.DATA.EF.Level>

@{
    ViewBag.Title = "Levels";
}
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LevelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LevelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <div>| @Html.ActionLink("Edit", "Edit", new { id = item.LevelID }) |</div>
                    @Html.ActionLink("Delete", "Delete", new { id = item.LevelID })
                }
            </td>
        </tr>
    }

</table>
