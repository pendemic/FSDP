@model FSDP.DATA.EF.Reservation

@{
    ViewBag.Title = "New Reservation";
}



@using (Html.BeginForm("Create", "Reservations", FormMethod.Post, new { @class="appointment__form"}))
{
    @Html.AntiForgeryToken()

    <section class="appointment">
        <div class="container">
            <div class="appointment__text">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <img src="~/Content/img/icon-white.png" alt="">
                            <h2>Make A Reservation</h2>
                        </div>
                    </div>
                </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.DropDownList("OwnerAssetID", null, htmlAttributes: new { @class = "col-lg-12", @placeholder = "Member Name" })
                            @Html.ValidationMessageFor(model => model.OwnerAssetID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-6">
                            @Html.DropDownList("LocationID", null, htmlAttributes: new { @class = "col-lg-6", @placeholder = "Location" })
                            @Html.ValidationMessageFor(model => model.LocationID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-6">
                            @Html.DropDownList("ClassID", null, htmlAttributes: new { @class = "col-lg-6", @placeholder = "Choose a Class" })
                            @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-12 text-center">
                            <input type="submit" value="Create Reservation" class="btn btn-light" />
                        </div>
                    </div>
            </div>
        </div>
    </section>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
